<h1>User info</h1>
<%= form_for(@user) do |f| %>
<div>
      <label>Name</label>
      <%= f.text_field :name, autofocus: true, placeholder:"Name"%>
      <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
  
      <label>Introduction</label>
      <%= f.text_area :introduction %>

      <label>ProfileImage</label>
      <%= f.attachment_field :profile_image, placeholder: "Image", class: "user-edit-form" %>
 </div>            

<%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>